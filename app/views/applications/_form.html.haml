= form_for @application do |f|
  - if @application.errors.any?
    #error_explanation
      %h2= "#{pluralize(@application.errors.count, "error")} prohibited this application from being saved:"
      %ul
        - @application.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title, class: 'span4'
  .field
    = f.label :url
    = f.text_field :url, class: 'span4'
  .field
    = f.label :description
    = f.text_area :description, class: 'span4'
  .form-actions
    - if @application.new_record?
      = f.submit 'Create', class: 'btn btn-primary btn-success'
    - else
      = f.submit 'Save', class: 'btn btn-primary'
